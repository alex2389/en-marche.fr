{% if templates|length %}
    <table>
        {% for class,name in templates %}
            <tr>
                <td>{{ name }}</td>
                <td>
                    <a href="{{ path('app_email_template_html', {name: name}) }}">
                        html
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_email_template_text', {name: name}) }}">
                        text
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    No template found in database.
{% endif %}

